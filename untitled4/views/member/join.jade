extends ../layout
block content
    div(class = 'container-fluid' style='background:#333333; min-height:100%;')
        div(class='well' style='font-size:2em; text-align:center;') 회원 가입
        div(class='col-lg-12 well')
            div(class='row')
                form(action='/member/join', method='post', id='login-form')
                    div(class='col-sm-12')
                        div(class='container-fluid')
                            div(class='input-group' style='margin-bottom:10px;')
                                span(class='input-group-addon')
                                    span(class='glyphicon glyphicon-user')
                                input(type = 'text', name='inputID', id='inputID', class='form-control', placeholder='ID')
                            br
                            div(class='input-group' style='margin-bottom:10px;')
                                span(class='input-group-addon')
                                    span(class='glyphicon glyphicon-lock')
                                input(type= 'password', name='inputPwd', class='form-control', id='inputPWD', placeholder='Password')
                            br
                            div(class='button-group')
                                button(type='submit' class='btn btn-info' style='border-radius:5px; float:right;') Join
